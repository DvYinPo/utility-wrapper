{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2015",
    "module": "ES2015",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "isolatedModules": false,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
